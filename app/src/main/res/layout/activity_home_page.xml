<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bg">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/app_logo"
            android:contentDescription="@string/logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginStart="12dp"
            android:textColor="@android:color/white" />
    </LinearLayout>


    <!-- City Selector -->
    <Spinner
        android:id="@+id/citySpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:spinnerMode="dropdown"
        android:padding="8dp"
        android:layout_marginBottom="16dp"/>

    <!-- Current Temperature and Description -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#FFFFFF"
        android:elevation="6dp"
        android:layout_marginBottom="16dp"
        android:gravity="center_horizontal"
        android:clipToOutline="true">

        <TextView
            android:id="@+id/tempTv"
            android:textSize="52sp"
            android:textColor="#1E88E5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/descriptionTv"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="#1565C0"/>
    </LinearLayout>

    <!-- Weather Detail Cards Grid -->
    <GridLayout
        android:id="@+id/weatherGrid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="3"
        android:alignmentMode="alignMargins"
        android:columnOrderPreserved="false"
        android:layout_marginBottom="16dp">

        <!-- Pressure -->
        <LinearLayout
            android:id="@+id/cardPressure"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:elevation="6dp"
            android:gravity="center"
            android:clipToOutline="true"
            android:layout_margin="8dp">

            <TextView
                android:id="@+id/pressureTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1014 hPa"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#1565C0"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pressure"
                android:textSize="14sp"
                android:textColor="#90A4AE"/>
        </LinearLayout>

        <!-- Wind -->
        <LinearLayout
            android:id="@+id/cardWind"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:elevation="6dp"
            android:gravity="center"
            android:clipToOutline="true"
            android:layout_margin="8dp">

            <TextView
                android:id="@+id/windTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3.6 m/s"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#1565C0"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wind"
                android:textSize="14sp"
                android:textColor="#90A4AE"/>
        </LinearLayout>

        <!-- Humidity -->
        <LinearLayout
            android:id="@+id/cardHumidity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:elevation="6dp"
            android:gravity="center"
            android:clipToOutline="true"
            android:layout_margin="8dp">

            <TextView
                android:id="@+id/humidityTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="62%"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#1565C0"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Humidity"
                android:textSize="14sp"
                android:textColor="#90A4AE"/>
        </LinearLayout>

        <!-- Visibility -->
        <LinearLayout
            android:id="@+id/cardVisibility"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:elevation="6dp"
            android:gravity="center"
            android:clipToOutline="true"
            android:layout_margin="8dp">

            <TextView
                android:id="@+id/visibilityTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10000 m"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#1565C0"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Visibility"
                android:textSize="14sp"
                android:textColor="#90A4AE"/>
        </LinearLayout>

        <!-- Sunrise -->
        <LinearLayout
            android:id="@+id/cardSunrise"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:elevation="6dp"
            android:gravity="center"
            android:clipToOutline="true"
            android:layout_margin="8dp">

            <TextView
                android:id="@+id/sunriseTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="06:15 AM"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#1565C0"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sunrise"
                android:textSize="14sp"
                android:textColor="#90A4AE"/>
        </LinearLayout>

        <!-- Sunset -->
        <LinearLayout
            android:id="@+id/cardSunset"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:elevation="6dp"
            android:gravity="center"
            android:clipToOutline="true"
            android:layout_margin="8dp">

            <TextView
                android:id="@+id/sunsetTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="07:45 PM"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#1565C0"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sunset"
                android:textSize="14sp"
                android:textColor="#90A4AE"/>
        </LinearLayout>
    </GridLayout>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        app:menu="@menu/bottom_nav_menu"
        app:itemIconTint="@color/black"
        app:itemTextColor="@color/black"/>
</LinearLayout>
